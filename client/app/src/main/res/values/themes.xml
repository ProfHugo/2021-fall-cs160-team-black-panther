<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Interval" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- the top nav bar of the app-->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- the toppest of the app-->
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--the style for splash screen-->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:statusBarColor">@color/transpalentColor</item>
    </style>

    <style name="nothing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:statusBarColor">@color/transpalentColor</item>
        <!-- Customize your theme here. -->
    </style>
</resources>